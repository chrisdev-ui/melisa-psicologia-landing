---
const whatsappLink = import.meta.env.PUBLIC_WHATSAPP_LINK ?? "https://wa.me/573000000000";
const contactPhone = import.meta.env.PUBLIC_CONTACT_PHONE ?? "+57 300 000 0000";
const contactEmail = import.meta.env.PUBLIC_CONTACT_EMAIL ?? "agenda@psicologiamelissa.com";
const officeAddress = import.meta.env.PUBLIC_OFFICE_ADDRESS ?? "Consulta presencial en Medellín, Colombia";
const contactHours = import.meta.env.PUBLIC_CONTACT_HOURS ?? "Lunes a sábado · 8:00 a.m. a 7:00 p.m.";

const contactCards = [
  {
    icon: "phone",
    label: "Llamada o WhatsApp",
    value: contactPhone,
    gradient: "linear-gradient(135deg, #D4F5ED 0%, #B8EBE0 100%)",
  },
  {
    icon: "mail",
    label: "Correo",
    value: contactEmail,
    gradient: "linear-gradient(135deg, #E8D8F5 0%, #D8C4EB 100%)",
  },
  {
    icon: "map-pin",
    label: "Atención presencial",
    value: officeAddress,
    gradient: "linear-gradient(135deg, #D4EBF5 0%, #B8E0EB 100%)",
  },
  {
    icon: "clock-3",
    label: "Horario de atención",
    value: contactHours,
    gradient: "linear-gradient(135deg, #25D366 0%, #128C7E 100%)",
  },
];
---

<section
  id="contact-cta"
  class="section relative overflow-hidden"
  style="background: linear-gradient(135deg, #FAF9F6 0%, #F5F8FA 50%, #FAF5F8 100%);"
>
  <div class="container relative z-10">
    <div class="mx-auto max-w-4xl text-center" data-animate-group>
      <h2 class="text-[34px] font-bold leading-[120%] tracking-normal text-[#3D3D3D] md:text-[44px]" data-animate-child>
        ¿Listos para dar el primer paso?
      </h2>
      <p class="mx-auto mt-4 max-w-3xl text-[18px] font-normal leading-[160%] tracking-normal text-[#6B6B6B]" data-animate-child>
        Estoy aquí para escucharte. Puedes escribirme cuando quieras, sin presión y con acompañamiento cercano.
      </p>
    </div>

    <div class="mx-auto mt-10 grid max-w-5xl gap-5 md:grid-cols-2" data-animate-group>
      {
        contactCards.map((card) => (
          <article class="flex min-h-[122px] items-center gap-4 rounded-[22px] bg-[#FAF9F6] px-6 py-5 shadow-soft" data-animate-child>
            <div
              class="flex h-12 w-12 shrink-0 items-center justify-center rounded-[14px] text-white"
              style={`background: ${card.gradient}`}
            >
              <i data-lucide={card.icon} class="h-[22px] w-[22px]" stroke-width="1.9"></i>
            </div>

            <div class="min-w-0">
              <p class="text-[13px] font-medium leading-normal tracking-normal text-[#9A9A9A]">{card.label}</p>
              <p class="mt-1 text-[17px] font-semibold leading-normal tracking-normal text-[#3D3D3D] break-words">{card.value}</p>
            </div>
          </article>
        ))
      }
    </div>

    <div class="mx-auto mt-7 flex max-w-5xl justify-center" data-animate="fade-up">
      <a
        href={whatsappLink}
        target="_blank"
        rel="noreferrer"
        class="inline-flex min-h-[62px] items-center justify-center gap-3 rounded-full bg-[linear-gradient(90deg,#FF8A7A_0%,#E8A4C9_100%)] px-10 text-[20px] font-semibold leading-normal tracking-normal text-white shadow-soft transition hover:-translate-y-0.5"
      >
        Agenda tu consulta
        <i data-lucide="arrow-right" class="h-[22px] w-[22px]" stroke-width="2.1"></i>
      </a>
    </div>
  </div>

  <div class="pointer-events-none absolute right-8 top-20 h-10 w-10 rotate-12 rounded-[12px] bg-[rgba(93,187,158,0.07)]"></div>
  <div class="pointer-events-none absolute left-10 bottom-12 h-12 w-12 -rotate-12 rounded-[13px] bg-[rgba(93,187,158,0.07)]"></div>
</section>
